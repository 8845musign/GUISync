doctype html(lang='ja')
head
    meta(charset='UTF-8')
    |   
    title Hello World!
    |   
    link(rel='stylesheet', type='text/css', href='style.css')
  body
    header
      h1 Easy BrowserSync
    |   
    section.settingSection
      h2 Settings
      |     
      .form-group
        fieldset
          legend Proxy
          |         
          label
            | Target URL:
            input#proxyTarget.form-control(type='text')
      .form-group
        fieldset
          legend
            label
              | Basic Auth
              input(type='checkbox', checked='checked')
          |         
          label
            | User:
            input#authUser.form-control(type='text')
          |         
          label
            | Password:
            input#authPass.form-control(type='text')
    |   
    button#btnStart.btn.btn-primary(type='button') Start
    |   
    button#btnModuleInstall.btn.btn-primary(type='button') module install
    |   
    textarea#windowConsole(readonly='readonly') console log here
    |   
    script(src='App.js')
    |   
    script.
      (function(){
      window.addEventListener('DOMContentLoaded', function(){
      var app = new App();
      app.start();
      });
      }());